    {% for don in dons %}
        <tr>
            <td>{{ don.id }}</td>
            <td>{{ don.idBen }}</td>
            <td>{{ don.titre }}</td>
            <td>{{ don.qte }}</td>
            <td>{{ don.type }}</td>
            <td>{{ don.date ? don.date|date('Y-m-d') : '' }}</td>
            <td>{{ don.idLocal }}</td>
            <td><img src="{{asset ('uploads/donimage/' ~ don.imge)}}" width="150px" height="150px"></td>
            <td>
                <a href="{{ path('app_don_show', {'id': don.id}) }}">Show</a>
                <a href="/don/remove/{{don.id}}">Delete</a>
