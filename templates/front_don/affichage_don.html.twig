                <a href="https://twitter.com/intent/tweet?url={{ app.request.uri }}&amp;text=Check+out+this+awesome+post" target="_blank"><i class="bi bi-twitter"></i></a>
                <a href="{{ path('bank_get_qr_code', {'id': don.id}) }}" class="btn btn-outline-primary">Obtenir le code QR</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="9">No records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

            
        
