{% extends 'templateback.html.twig' %}
{% block titre%}
    <h1>Liste Des Reclamations</h1>
{% endblock %}
{% block body %}
    <div class="row">
        {% for reclamation in reclamations %}
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ reclamation.nom }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ reclamation.nom }}{{ reclamation.prenom }}</h6>
                        <p class="card-text">Email :{{ reclamation.email }}</p>
                        <p class="card-text">Description :{{ reclamation.description }}</p>
                        <a href="{{path('app_detail',{id:reclamation.id})}} " class="card-link">Details</a>
                        <a href="{{path('app_delete',{id:reclamation.id})}} " class="card-link">Delete</a>
                        <a href="{{path('app_edit',{id:reclamation.id})}} " class="card-link">Edit</a>
                        <a href="{{path('app_addresponse',{id:reclamation.id})}} " class="card-link">Repondre</a>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% if isPaginated %}
        <nav aria-label="Page navigation example">
            <ul class="pagination">

                {% if page != 1 %}
                    <li class="page-item"><a class="page-link" href="{{ path('app_indexall',{page:page-1,nbre:nbre}) }}">Previous</a></li>
                {% endif %}
                {% for i in range(1,nbrepage) %}
                    <li class="page-item"><a class="page-link" href="{{ path('app_indexall',{page:i,nbre:nbre}) }}">{{ i }}</a></li>
                {% endfor %}
                {% if page != nbrepage %}

                    <li class="page-item"><a class="page-link" href="{{ path('app_indexall',{page:page+1,nbre:nbre}) }}">Next</a></li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}

{% endblock %}