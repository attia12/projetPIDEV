    <h1>Don</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ don.id }}</td>
            </tr>
            <tr>
                <th>Id_ben</th>
                <td>{{ don.idBen }}</td>
            </tr>
            <tr>
                <th>Titre</th>
